<h1>Listando convênios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @convenios.each do |convenio| %>
  <tr>
    <td><%= convenio.nome %></td>
    <td><%= link_to 'Exibir', convenio %></td>
    <td><%= link_to 'Editar', edit_convenio_path(convenio) %></td>
    <td><%= link_to 'Deletar', convenio, :confirm => 'Tem certeza?', :class => "btn-danger", :method => :delete %></td>
  </tr>
<% end %>
</table>

